---
const { title } = Astro.props;
---

<div class="window">
    <div class="title-bar">
        <div class="title">
            <span class="icon"></span>
            {title}
        </div>
        <div class="controls">
            <button class="minimize"></button>
            <button class="maximize"></button>
            <button class="close"></button>
        </div>
    </div>
    <div class="window-content">
        <slot />
    </div>
</div>

<style>
    .window {
        max-width: 90vw;
        max-height: 90vh;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.9);
        outline: 1px solid rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-bottom: 8px solid rgba(255, 255, 255, 0.5); /* Only bottom border */
        border-left: 8px solid rgba(255, 255, 255, 0.5); /* Only left border */
        border-right: 8px solid rgba(255, 255, 255, 0.5); /* Only right border */
        border-top: none; /* No top border */
        margin: 20px auto;
        top: 0; /* Make sure the window stays at the top */
        transform: translateY(0); /* No initial translation */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .window-content {
        max-height: calc(90vh - 100px); /* Adjust based on the height of the title bar */
        overflow-y: auto; /* Enable vertical scrolling within the content area */
        padding: 10px;
        background: white; /* Content background */
        border: 1px black solid;
    }

    .title-bar {
        /* background: linear-gradient(to right, #0078D7, #00A2E8); */
        background: rgba(255, 255, 255, 0.5);
        padding: 10px 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0; /* Keep the title bar at the top when scrolling */
        z-index: 1;
    }

    .title {
        display: flex;
        align-items: center;
        font-weight: bold;
        color: #333;
        font-size: 14px;
        text-shadow: 1px 1px 0px rgba(255, 255, 255, 0.2); /* Subtle text shadow */
    }

    .title .icon {
        width: 16px;
        height: 16px;
        background: url('/path/to/icon.png') no-repeat center center;
        margin-right: 10px;
    }

    .controls {
        display: flex;
        position: absolute;
        right: 0px; /* Adjust this value to align with the title bar's padding */
        top: 13px;
        transform: translateY(-50%); /* Center vertically within the title bar */
    }

    .controls button {
        width: 30px;
        height: 25px;
        top: -2px;
        background-color: transparent;
        border: 1px solid #636363; /* Light grey border to match the XP style */
        cursor: pointer;
        margin-left: -1px; /* Space between buttons */
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        border-radius: 6px; /* Slightly rounded corners */
        border-top-left-radius: 0;
        border-top-right-radius: 0;
        box-shadow: inset 0 0 3px rgb(255, 255, 255); /* Inner shadow for a 3D effect */
    }

    .controls .maximize {
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    .controls .minimize {
        border-bottom-right-radius: 0;
    }

    .controls .close {
        border-bottom-left-radius: 0;
    }

    .controls .minimize::before,
    .controls .maximize::before,
    .controls .close::before {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
        color: #333;
    }

    .controls .minimize::before {
        content: '-';
    }

    .controls .maximize::before {
        content: '▢';
        font-size: 12px;
    }

    .controls .close::before {
        content: '×';
    }

  
</style>
