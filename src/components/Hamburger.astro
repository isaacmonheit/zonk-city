<div class="hamburger" id="hamburger">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
</div>

<style>
    .hamburger {
        padding-right: 20px;
        cursor: pointer;
    }

    .hamburger .line {
        display: block;
        width: 40px;
        height: 5px;
        margin-bottom: 10px;
        background-color: #000000;
        box-shadow: 0 0 5px rgba(255, 165, 0, 0.5); /* Initial soft glow */
        transition: background-color 0.3s ease;
        animation: glow-pulse 2s infinite ease-in-out; /* Pulsating effect */
    }

    /* Keyframes for the pulsating orange glow */
    @keyframes glow-pulse {
        0% {
            box-shadow: 0 0 5px 10px rgba(255, 165, 0, 0.5), 0 0 10px rgba(255, 165, 0, 0.3);
        }
        50% {
            box-shadow: 0 0 20px rgba(255, 165, 0, 1), 0 0 30px rgba(255, 165, 0, 0.7);
        }
        100% {
            box-shadow: 0 0 5px rgba(255, 165, 0, 0.5), 0 0 10px rgba(255, 165, 0, 0.3);
        }
    }
</style>
  