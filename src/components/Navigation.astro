<div class="nav-links">
    <a href="/" aria-label="Home">
        <div class="icon-container">
            <img src="../icons/home.png" alt="Home Icon" />
            <span class="icon-title">Home</span>
        </div>
    </a>
    <a href="/music/" aria-label="Music">
        <div class="icon-container">
            <img src="../icons/music.png" alt="Music Icon" />
            <span class="icon-title">Music</span>
        </div>
    </a>
    <a href="/code/" aria-label="Code">
        <div class="icon-container">
            <img src="../icons/code.png" alt="Code Icon" />
            <span class="icon-title">Code</span>
        </div>
    </a>
    <a href="/garden/" aria-label="Garden">
        <div class="icon-container">
            <img src="../icons/garden.png" alt="Garden Icon" />
            <span class="icon-title">Garden</span>
        </div>
    </a>
    <a href="/about/" aria-label="About">
        <div class="icon-container">
            <img src="../icons/about.png" alt="About Icon" />
