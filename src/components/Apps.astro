---
import Navigation from './Navigation.astro';
---

<header>
    <nav>
        <Navigation />
    </nav>
</header>

<style>
    header {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 60px; /* Adjust the height to match the look of the XP bar */
        background: linear-gradient(to top, rgba(0, 0, 0, 0.268), #ffffffa2);
        backdrop-filter: blur(3px) ; /* Black fading to white */
        display: flex;
        justify-content: left;
        /* align-items: center; */
        z-index: 1000; /* Ensure it stays on top of other content */
        border-top: 1px solid #333; 
    }
</style>