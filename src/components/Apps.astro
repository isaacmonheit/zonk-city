---
import Navigation from './Navigation.astro';
---

<header>
    <nav>
        <Navigation />
    </nav>
</header>

<style>
    header {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 60px; /* Adjust the height to match the XP bar */
        background: linear-gradient(to top, rgba(0, 0, 0, 0.268), #ffffffa2); /* Black fading to white */
        backdrop-filter: blur(3px);
        display: flex;
        justify-content: flex-start;
        align-items: center;
        z-index: 1000; /* Ensure it stays on top of other content */
        border-top: 1px solid #333;
        padding: 0 20px;
        box-shadow: 0px -2px 5px rgba(0, 0, 0, 0.2); /* Subtle shadow for depth */
    }
</style>