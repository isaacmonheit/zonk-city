---
const { title, photoPath, pagePath } = Astro.props;
---

<div class="project-box">
    <a href={pagePath} aria-label={title}>
        <div class="image-wrapper">
            <img src={photoPath} alt={title} />
            <h2>{title}</h2>
        </div>
    </a>     
</div>

<style>
    .project-box {
        width: 278px;
        height: 278px;
        position: relative;
        background: rgba(143, 143, 143, 0.251); /* Glassy background */
        backdrop-filter: blur(5px);
        border-radius: 10px;
        overflow: hidden; /* Ensure content stays inside the box */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* Soft shadow */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .project-box:hover {
        transform: translateY(-5px); /* Slight lift on hover */
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
    }

    .project-box a {
        display: flex;
        width: 100%;
        height: 100%;
        text-decoration: none;
        position: relative;
    }

    .image-wrapper {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Maintain aspect ratio, cover the area */
        transition: opacity 0.3s ease; /* Smooth transition for dimming */
    }

    h2 {
        position: absolute;
        /* top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); */
        padding: 20px;
        color: rgb(0, 0, 0);
        font-size: 20px;
        text-align: center;
        opacity: 0; /* Hidden by default */
        transition: opacity 0.3s ease; /* Smooth fade-in on hover */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-shadow: 1px 1px 0px rgba(150, 150, 150, 0.5); /* Text shadow for contrast */
    }

    .project-box:hover img {
        opacity: 0.3; /* Dim the image on hover */
    }

    .project-box:hover h2 {
        opacity: 1; /* Show the title in the center */
    }
</style>